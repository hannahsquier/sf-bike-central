<%= form_tag login_path, class: "navbar-form navbar-right" do %>
     
  <div class="form-group">
    <%= text_field_tag :username, nil, class: 'form-control', placeholder:"Username" %>
  </div>


  <div class="form-group">
    <%= password_field_tag :password, nil, class: 'form-control', placeholder: 'Password' %>
  </div>

  <div class="form-group">
    <%= submit_tag "Login", class: "form-control btn btn-default" %>
  </div>


  <%= label_tag do %>
    Remember me?
    <%= check_box_tag :remember_me, class: 'form-control' %>
  <% end %>

<% end %>